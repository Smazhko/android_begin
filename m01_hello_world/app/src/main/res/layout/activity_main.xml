<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:layout_marginTop="-150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="24sp"
        />

    <TextView
        android:id="@+id/message"
        style="@style/text_free"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:layout_marginTop="-100px"
        android:gravity="center"
        android:text="@string/txt_free"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/remainCounter"
        style="@style/counter"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="1"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/totalCounter"
        style="@style/counter"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:text="0"
        />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="60dp"
        android:text="@string/btn_reset"
        android:textSize="26sp"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/btn_minus"
        style="@style/btn_counter"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="50dp"
        android:scaleType="center"
        android:background="@drawable/selector_btn_minus"
        />

    <ImageButton
        android:id="@+id/btn_plus"
        style="@style/btn_counter"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="50dp"
        android:background="@drawable/selector_btn_plus"
        />

</FrameLayout>