<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTitle"
    >

    <ImageView
        android:id="@+id/picMap"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="220dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map_transper" />

    <ImageView
        android:id="@+id/picQuiz"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/png_transparent_online_quiz"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/picEarth"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.2"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:srcCompat="@drawable/earth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-40dp"
        />

    <Button
        android:id="@+id/button_start"
        style="@style/borderedBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/str_btn_begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>