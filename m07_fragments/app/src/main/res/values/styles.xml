<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="borderedBtn" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="anotherButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/dark_green</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="anotherButton.1">
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>


    <style name="questionNumber">
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="questionRB">
        <item name="android:background">@drawable/selector_rb</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:fontFamily">@font/jetbrains_mono_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginVertical">3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>