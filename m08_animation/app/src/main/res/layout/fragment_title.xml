<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTitle"
    >

    <ImageView
        android:id="@+id/picMap"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="220dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map_transper" />

    <ImageView
        android:id="@+id/picQuiz"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/png_transparent_online_quiz"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/picEarth"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.2"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:srcCompat="@drawable/earth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-40dp"
        />

    <Button
        android:id="@+id/button_date"
        style="@style/anotherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/picMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_start"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/btn_date" />

    <Button
        android:id="@+id/button_start"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/big_bordered_btn"
        style="@style/bigBorderedBtnText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_begin"
       app:layout_constraintTop_toBottomOf="@id/button_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
